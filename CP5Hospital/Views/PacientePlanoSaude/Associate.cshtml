@model CP5Hospital.Models.PacientePlanoSaude

@{
    ViewBag.Title = "Associar Paciente a Plano de Saúde";
}

<h2>Associar Paciente a Plano de Saúde</h2>

<form asp-action="Associate" method="post" class="mt-4">
    <div class="form-group">
        <label>Paciente</label>
        <select asp-for="PacienteId" class="form-control">
            @* Preencha com a lista de pacientes *@
        </select>
    </div>
    <div class="form-group">
        <label>Plano de Saúde</label>
        <select asp-for="PlanoSaudeId" class="form-control">
            @* Preencha com a lista de planos *@
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Associar</button>
    <a href="/" class="btn btn-secondary">Cancelar</a>
</form>
