@model CP5Hospital.Models.Paciente

@{
    ViewBag.Title = "Detalhes do Paciente";
}

<h2>Detalhes do Paciente</h2>

<div>
    <p><strong>Nome Completo:</strong> @Model.NomeCompleto</p>
    <p><strong>Data de Nascimento:</strong> @Model.DataNascimento.ToShortDateString()</p>
    <p><strong>CPF:</strong> @Model.CPF</p>
    <p><strong>Endereço:</strong> @Model.Endereco</p>
    <p><strong>Telefone:</strong> @Model.Telefone</p>
</div>

<a href="/Paciente" class="btn btn-secondary">Voltar</a>
